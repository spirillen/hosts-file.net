{
  "linters": {
    "text": {
      "type": "text",
      "include": ["(\\.(list|md|txt|rst)$)"],
      "severity.rules": {
        "(^E)": "warning",
        "(^W)": "advice"
      }
    },
    "chmod": {
      "type": "chmod"
    },
    "spelling": {
      "type": "spelling",
      "include": "(\\.(list|md|rst|txt)$)i"
    },
    "merge-conflict": {
	  "type": "merge-conflict"
	},
	"filename": {
	  "type": "filename"
	},
	"Generated Code": {
	  "type": "generated"
	}
  }
}
